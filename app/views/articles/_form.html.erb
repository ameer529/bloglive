<%= form_with model: article do |form| %>
  <div class="form-group">
    <% form.label :title %><br>
    <%= form.text_field :title, class:"form-control",placeholder:"Title" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <% form.label :body %><br>
    <%= form.text_area :body, class:"form-control",placeholder:"Body" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <% if article.image.attached? %>
    <%= form.label:Image %>
  </br>
    <%= image_tag(article.image, :size => "260x180") %>
    <% end %>
    <%= form.file_field:image ,class:"form-control" %>
  </div>

  <div class="form-group">
    <% form.label :user %>
    <%= form.text_field :user_id, class:"form-control",value:current_user.id , type: :hidden %><br>
  </div>

  <div >
    <%= form.submit %>
  </div>
<% end %>
